	/*이메일인증*/
	private String init() {
		Random ran = new Random();
		StringBuffer sb = new StringBuffer();
		int num = 0;
		
		do {
			num = ran.nextInt(75) + 48;
			if ((num >= 48 && num <= 57) || (num >= 65 && num <= 90) || (num >= 97 && num <= 122)) {
				sb.append((char) num);
			} else {
				continue;
			}
[출처] Spring 이메일 인증 방법 + 데이터베이스 추가|작성자 순남2

 
		}
		return null;
		
	}
